---
import BasePage from '../layouts/BasePage.astro';
import BlogDates from '../components/BlogDates.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  heroAlt?: string;
}

const { title, description, pubDate, updatedDate, heroImage, heroAlt = 'A poor description of an image', ...props} = Astro.props;
---
<blog-post>
  <BasePage title={title} description={description} heroImage={heroImage} heroAlt={heroAlt} showTitle {...props}>
    <fragment class="text-center" slot="blog-post">
      <BlogDates pubDate={pubDate} updatedDate={updatedDate} />
      <slot />
    </fragment>
  </BasePage>
</blog-post>
